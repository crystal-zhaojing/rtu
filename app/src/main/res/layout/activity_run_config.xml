        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_run_config_msg"
            />

        <Button
            android:text="发送报文"

            android:id="@+id/button_run_config_send"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_run_config_temp"
            />
    </LinearLayout>
</ScrollView>