            <EditText
                android:id="@+id/edit_run_config_15"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="4012"
                android:hint="" />
            <EditText
                android:id="@+id/edit_run_config_155"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="0001"
                android:hint="" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加报水位以下加报阈值标识符及阈值："
                android:id="@+id/tv_run_config18"
