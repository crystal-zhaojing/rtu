<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".RunConfigActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_run_config"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title=""
        app:titleTextColor="@android:color/white" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中心站地址:"
                android:textSize="20dp"
                android:id="@+id/tv_run_config2"
                />
            <EditText
                android:id="@+id/edit_run_config_1"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="00"
                android:hint="中心站地址" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="遥测站地址:"
                android:textSize="20dp"
                android:id="@+id/tv_run_config1"
                />
            <EditText
                android:id="@+id/edit_run_config_2"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="6666666601"
                android:hint="遥测站地址" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密            码:"
                android:textSize="20dp"
                android:id="@+id/tv_run_config3"
                />
            <EditText
                android:id="@+id/edit_run_config_3"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="1234"
                android:hint="密码" />
        </LinearLayout>



        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="定时报时间间隔标识符及时间间隔："
                android:id="@+id/tv_run_config5"
                />
            <EditText
                android:id="@+id/edit_run_config_4"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="2008"
                android:hint="" />
            <Spinner android:id="@+id/spinner_run_config1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:entries="@array/type10"/>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加报时间间隔标识符及时间间隔："
                android:id="@+id/tv_run_config6"
